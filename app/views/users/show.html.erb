<div class="p-4 sm:px-6 lg:px-8 max-w-7xl m-auto">
  <div class="px-4 sm:px-0 my-6">
    <h3 class="text-3xl font-semibold leading-7 text-gray-500"><%= @user.username %>'s profile</h3>
  </div>

  <div class="flex justify-center">
    <%= gravatar_for @user, size: 200 %>
  </div>

  <% @articles.each do |article| %>
    <a href=<%= article_path article %>>
      <div class="my-4 max-w-4xl m-auto">
        <%= render 'articles/article', article: article, line_clamp: "line-clamp-1" %>
      </div>
    </a>
  <% end %>

</div>
