<div class="p-4 sm:px-6 lg:px-8 max-w-7xl m-auto">
  <div class="px-4 sm:px-0 my-6">
    <h3 class="text-3xl font-semibold leading-7 text-gray-500"><%= @user.username %>'s profile</h3>
    <div class="mt-2 ml-8 flex flex-row items-center gap-10">
      <div class="flex-none">
        <%= gravatar_for @user, size: 150 %>
        <div class="m-auto text-center text-gray-500">
          <%= link_to 'Edit your profile', edit_user_path(@user) %>
        </div>
      </div>
      <div class="flex-1 text-base font-medium text-gray-500">
        <%= @user.bio %>
      </div>
    </div>
  </div>

  <% @articles.each do |article| %>
    <a href=<%= article_path article %>>
      <div class="my-4 max-w-4xl m-auto">
        <%= render 'articles/article', article: article, line_clamp: "line-clamp-1" %>
      </div>
    </a>
  <% end %>

</div>
