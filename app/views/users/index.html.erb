<div class="p-4 sm:px-6 lg:px-8 max-w-7xl m-auto">
  <div class="sm:flex sm:items-center my-6">
    <div class="sm:flex-auto">
      <h3 class="text-3xl font-semibold leading-7 text-gray-500">Users</h3>
      <p class="mt-1 ml-4 text-base text-gray-700">A list of all users</p>
    </div>
  </div>

  <% @users.each do |user| %>
    <div class="flex flex-col my-4 p-4 max-w-4xl m-auto rounded-3xl shadow-lg bg-slate-400">
      <div class="flex-none">
        <div class="px-4 py-3 sm:px-0 text-center text-4xl font-semibold text-slate-800">
          <%= user.username %>
        </div>
        <div class="text-md pb-1 font-medium text-center text-slate-700">
          <%= pluralize(user.articles.count, 'article') %>
        </div>
        <div class="m-auto max-w-xl border-b border-slate-500"></div>
      </div>
      <div class="mt-4 flex flex-row justify-center">
        <div class="flex-none">
          <%= gravatar_for user, size: 150 %>
        </div>
      </div>
      <div class="text-sm pb-2 text-center text-slate-600">
        joined <%= time_ago_in_words(user.created_at) %> ago
      </div>
      <div class="flex-none mb-2 mx-6 text-indigo-600 text-right">
        <span class="hover:text-indigo-900"><%= link_to 'View', user_path(user) %></span> |
        <span class="hover:text-indigo-900"><%= link_to 'Edit', edit_user_path(user) %></span>
      </div>
    </div>
  <% end %>
  
</div>
