<div class="p-4 sm:px-6 lg:px-8 max-w-7xl m-auto">
  <div class="sm:flex sm:items-center my-6">
    <div class="sm:flex-auto">
      <h3 class="text-3xl font-semibold leading-7 text-gray-500">Articles</h3>
      <p class="mt-1 ml-4 text-base text-gray-700">A list of all articles in blog</p>
    </div>
    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
      <%= button_to "New Article", new_article_path, :class => "block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600", :method => :get %>
    </div>
  </div>

  <% @articles.each do |article| %>
    <div class="my-4 max-w-4xl m-auto">
      <%= render 'article', article: article, options: { line_clamp: "line-clamp-1", show: true } %>
    </div>
  <% end %>

</div>