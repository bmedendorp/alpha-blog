<%= render 'shared/errors', obj: @article %>
<div class="max-w-4xl m-auto">
  <div class="p-4 rounded-3xl shadow-xl bg-slate-400">

    <%= form_with(model: @article, local: true, data: { turbo: false }) do |f| %>
      <div class="space-y-12">
        <div class="border-gray-900/10 px-6">

          <div class="py-4 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
            <div class="sm:col-span-4">
              <%= f.label :title, :class => "block text-md font-medium leading-6 text-slate-700" %>
              <div class="mt-2">
                <div class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md">
                  <%= f.text_field :title, :class => "block flex-1 border-0 rounded py-1.5 pl-1 bg-slate-200 text-gray-900 placeholder:text-gray-400 focus:ring-0 text-lg sm:leading-6" %>
                </div>
              </div>
            </div>

            <div class="col-span-full">
              <%= f.label :description, :class => "block text-md font-medium leading-6 text-slate-700" %>
              <div class="mt-2">
                <%= f.text_area :description, :rows => "5", :class => "block w-full rounded-md border-0 py-1.5 bg-slate-200 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 text-lg sm:leading-6" %>
              </div>
            </div>
          </div>

          <div class="py-6 flex items-center justify-end gap-x-6">
            <%= link_to 'Cancel', articles_path, :class => "text-sm font-semibold leading-6 text-gray-900" %>
            <%= f.submit :class => "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
          </div>
          
        </div>
      </div>
    <% end %>

  </div>
</div>


